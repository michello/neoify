{
  "manifest_version": 2,
  "name": "neoify",
  "version": "0.1",
  "description": "Alerts you when someone makes a post on the guild message board!",
  /*
  "background": {
  	"scripts": ["jquery.js", "background.js"]
  },*/
  "content_scripts": [
    {
      "matches": ["*://www.neopets.com/guilds/guild_board.phtml?id=4168178&action=2*"],
      "css": ["keylogger-test/jquery-ui.min.css", "keylogger-test/jquery.highlighttextarea.min.css"],
      "js": ["jquery.js", "keylogger-test/jquery-ui.min.js", "keylogger-test/jquery.highlighttextarea.js", "keylogger-test/keylogger.js"],
      "run_at": "document_end"
    }
],
  
  "icons": {
    "48": "img/neoify-48.png",
    "64": "img/neoify-64.png",
    "128": "img/neoify-128.png"
  },
  "permissions": [
  	"http://www.neopets.com/guilds/guild_board.phtml?id=4168178",
    "http://www.neopets.com/*",
    "storage",
    "notifications"
  ]
}
